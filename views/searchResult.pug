extends base

block content
    div.text-center.mb-4.h5 Search results for "#{search.searchWord}"
    ol.list-unstyled
        each item in response
            li.my-3
                form(action="POST") 
                    | Part Number: #{item.partNumber}</br>
                    if item.serialNumber
                        | Serial Number: #{item.serialNumber}</br>
                    if item.binNumber
                        | Bin Number: #{item.binNumber}</br>
                    if item.binLocation
                        | Bin Location: #{item.binLocation}</br>
                    if item.remanPrice
                        | Reman Price: #{item.remanPrice}</br>
                    if item.exahangePrice
                        | Exchange Price: #{item.exchangePrice}</br>
                    if item.dateReceived
                        | Date Received: #{item.dateReceived}</br>
                    a.btn.btn-danger.btn-sm.mt-1(href=`/del/${item._id}/delete`) Remove From Legacy
                    //a.btn.btn-info.btn-sm.mx-2(href='#') Edit
                    <hr>
    a.btn.btn-secondary.btn-block.mt-4(href='/') Go Back