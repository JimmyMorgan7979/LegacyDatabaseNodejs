extends base

block content
    div.text-center.mb-4.h5 Search results for "#{search.searchWord}"
    ol.list-unstyled
        each item in response
            li.my-3
                form(action="POST") 
                    strong.pr-2 Part Number: 
                    |#{item.partNumber}</br>
                    if item.serialNumber 
                        strong.pr-2 Serial Number: 
                        |#{item.serialNumber}</br>
                    if item.binNumber
                        strong.pr-2 Bin Number: 
                        |#{item.binNumber}</br>
                    if item.binLocation
                        strong.pr-2 Bin Location: 
                        |#{item.binLocation}</br>
                    if item.remanPrice
                        strong.pr-2 Reman Price: 
                        |#{item.remanPrice}</br>
                    if item.exahangePrice
                        strong.pr-2 Exchange Price: 
                        |#{item.exchangePrice}</br>
                    if item.dateReceived
                        strong.pr-2 Date Received: 
                        |#{item.dateReceived}</br>
                    a.btn.btn-danger.btn-sm.mt-2(id="deletebutton",href=`/del/${item._id}/delete` disable) Remove From Legacy
                    //a.btn.btn-info.btn-sm.mx-2(href='#') Edit
                    <hr>
    a.btn.btn-secondary.btn-block.mt-4(href='/') Go Back