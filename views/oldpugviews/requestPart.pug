extends base

block content
    div.text-center.mb-4.h5 Requested Part
    ol.list-unstyled
        li.my-3
            |Stocked As: #{requestStockedAS}</br>
            |Description: #{requestedDescription}</br>
            |SAP Number: #{requestedSapNumber}</br>
            |List Price: #{requestedPrice}</br>
            form(action='/requestPart', method='POST') 
                div.form-group.p-2.text-center
                    label(for='searchword') Contact Info
                    input.form-control.my-3(type='text',name='name',placeholder='Name')
                    input.form-control.my-3(type='text',name='company',placeholder='Company Name')
                    input.form-control.my-3(type='text',name='email',placeholder='Email Address')
                    input.form-control.my-3(type='text',name='phone',placeholder='Phone Number')
                    textarea.form-control.my-3(name='message', rows=5, placeholder='Enter Message')
                    input(type='hidden', name='stockedAS', value=`${requestStockedAS}`)
                    input(type='hidden', name='description1', value=`${requestedDescription}`)
                    input(type='hidden', name='sapNumber', value=`${requestedSapNumber}`)
                    input(type='hidden', name='price', value=`${requestedPrice}`)
                    button.btn.btn-danger.m-2(type='submit') Submit Request            