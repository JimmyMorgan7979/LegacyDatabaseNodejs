extends base

block content
    form(action='/addPart', method='POST') 
        div.form-group.p-2.text-center
            label(for='searchword') Enter Information
            input.form-control.my-3(type='text',name='stockedAS',placeholder='Part Number')
            input.form-control.my-3(type='text',name='description1',placeholder='Description of Part')
            input.form-control.my-3(type='text',name='description2',placeholder='Additional Description')
            input.form-control.my-3(type='text',name='sapNumber',placeholder='SAP Number')
            input.form-control.my-3(type='text',name='manufacturer',placeholder='Manufacturer')
            input.form-control.my-3(type='text',name='location1',placeholder='Location 1')
            input.form-control.my-3(type='text',name='location2',placeholder='Location 2')
            input.form-control.my-3(type='text',name='location3',placeholder='Location 3')
            input.form-control.my-3(type='text',name='drawer',placeholder='Drawer')
            input.form-control.my-3(type='text',name='cross1',placeholder='Cross 1')
            input.form-control.my-3(type='text',name='cross2',placeholder='Cross 2')
            input.form-control.my-3(type='text',name='cross3',placeholder='Cross 3')
            input.form-control.my-3(type='text',name='price',placeholder='List Price')
            button.btn.btn-danger.m-2(type='submit') Add to Database
            div.form-group.p-2.text-center
            a.btn.btn-secondary.m-2(href='/partAdmin') Go Back



    