<!DOCTYPE html>
<html lang='en'>
    <head>
        <%- include('../partials/head'); %>
        <link rel='stylesheet' href='static/css/placeholder.css'>
    </head>
    <body>
        <div class="container">
            <%- include('../partials/header'); %>
            <%- include('../partials/links'); %>
            <%- include('../partials/banner'); %> 
            <%- include('../partials/message'); %>       
            <div class="row mt-3">
                <div class="col-sm">
                    <!--Spacing--> 
                </div>
                <div class="col-sm-6">
                    <div class="text-center mb-4 h5">Search results for "<%=search.searchWord%>"
                        <ol class="list-unstyled">
                            <% response.forEach(function(item){%>
                                <li class="my-3 text-left">
                                    <form action="/editCard/<%=item._id%>" method="POST">
                                        <div class="form-group p-2 text-center">
                                            <label for="searchword">Edit Information</label>
                                            <input class="form-control my-3" type="text" name="partNumber" placeholder="Part Number" value='<%=item.partNumber%>'/>
                                            <input class="form-control my-3" type="text" name="serialNumber" placeholder="Enter serial number" value='<%=item.serialNumber%>'/>
                                            <input class="form-control my-3" type="text" name="binNumber" placeholder="Enter bin number" value='<%=item.binNumber%>'/>
                                            <input class="form-control my-3" type="text" name="binLocation" placeholder="Enter Bin Location" value='<%=item.binLocation%>'/>
                                            <button class="btn btn-primary m-2" type="submit">Save Changes</button>
                                            <a class="btn btn-danger m-2" id="deletebutton" href="/del/<%=item._id%>/delete">Delete Board</a>
                                        </div>
                                    </form>
                                </li>
                            <% }); %>
                        </ol>
                        <a class="btn btn-secondary m-2" href="/cardAdmin">Go Back to Admin Page</a>
                    </div>
                </div>
                <div class="col-sm">
                    <!--Spacing--> 
                </div>
            </div>
        </div>
    </body>
</html>
