<html lang='en'>
    <head>
        <%- include('../partials/head'); %>
        <link rel='stylesheet' href='static/css/print.css'>
    </head>
    <body>
        <div class="container">     
            <div class="row mt-3">
                <div class="col-sm">
                    <!--Spacing--> 
                </div>
                <div class="col-sm-6  text-center print" id="printableArea">
                    <div class="row  print">
                        <div class="col-sm-3 text-left  print">
                            LV
                        </div>
                        <div class="col-sm-6  print">
                            <!--space-->
                        </div>
                        <div class="col-sm-3 text-right  print">
                            <%= new Intl.DateTimeFormat('en-US', { year: 'numeric', month: '2-digit', day: '2-digit'}).format(new Date()) %>
                        </div>
                    </div>
                    <div class="col-sm-12 h3 text-center print ">
                        <strong><%=printinfo.sapNumber%></strong>
                    </div>
                    <div class="col-sm-12 text-center print">
                        <div class="bcode mt-1 h1 ">*<%=printinfo.sapNumber%>*</div>
                    </div>
                    <div class="col-sm-12 text-center print">
                        <strong><%=printinfo.stockedAS%></strong>
                    </div>
                    <div class="col-sm-12  text-center print">
                        <small><%=printinfo.description1%></small>
                    </div>
                    <div class="row text-left  print">
                        <div class="col-sm-3  print">
                            Loc: <%=printinfo.location1%>
                        </div>
                        <div class="col-sm-6  print">
                            <!--space-->
                        </div>
                        <div class="col-sm-3 text-left  print">
                            Loc: <%=printinfo.location2%>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <!--Spacing--> 
                </div>
                <button onclick="printPageArea('printableArea')" class="print">Print</button>
            </div>
        </div>
    </body>
    <script>
        function printPageArea(areaID){
            var printContent = document.getElementById(areaID);
            var WinPrint = window.open('', '', 'width=600,height=250');
            WinPrint.document.write('<html><head><link rel="stylesheet" href="static/css/bootstrap.min.css"><link rel="stylesheet" href="static/css/print.css"></head><body>');
            WinPrint.document.write(printContent.innerHTML);
            WinPrint.document.write('</body></html>');
            WinPrint.document.close();
            function printclose(){
                WinPrint.focus();
                WinPrint.print();
                WinPrint.close();
            }
            setTimeout(function(){printclose()},3000);
            
            
}
    </script>
</html>
